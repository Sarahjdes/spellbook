{
  "manifest_version": 2,

  "name": "Spellbook",
  "description": "Spellbook bookmark manager",
  "version": "0.2.0",

  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "64": "icon.png"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "tabs"
  ]
}
